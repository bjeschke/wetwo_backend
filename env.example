# Database Configuration
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME

# JWT Configuration
JWT_SECRET=change-me-to-a-secure-secret-key-minimum-32-characters

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Apple Sign-In Configuration
# APPLE_AUDIENCE should match your iOS app's Bundle ID
APPLE_AUDIENCE=com.jacqueline.wetwo
# APPLE_ISSUER is always https://appleid.apple.com for Apple Sign-In
APPLE_ISSUER=https://appleid.apple.com

# Server Configuration
PORT=3000
NODE_ENV=development

# Railway Environment URLs
# STAGING_URL=https://wetwo-backend-staging.up.railway.app
# PRODUCTION_URL=https://wetwo-backend-production.up.railway.app

# Cloudflare R2 / S3 Configuration (if using file storage)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=auto
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_BUCKET_NAME=your-bucket-name
R2_PUBLIC_HASH=your-public-hash
